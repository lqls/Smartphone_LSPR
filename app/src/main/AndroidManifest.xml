<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lqSPRimaging"
    android:allowBackup="true"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0.0">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14">

    </uses-sdk>
    <!-- Increase file storage and access to camera permissions -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />


    <application
        android:icon="@drawable/spr"
        android:label="@string/app_name">
        <activity
            android:name="com.lqSPRimaging.activity.MainActivity"

            android:label="LSPR"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lqSPRimaging.activity.ImageSPR"
            android:theme="@android:style/Theme.Holo.Light" />

    </application>


</manifest>